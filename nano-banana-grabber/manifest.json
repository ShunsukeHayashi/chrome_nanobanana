{
  "manifest_version": 3,
  "name": "Nano Banana Snapper",
  "version": "1.0",
  "description": "画面の一部をキャプチャしてNano Banana Proで画像生成します",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
