{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "project": {
    "name": "nano-banana-snapper",
    "description": "Chrome extension for AI image generation with Nano Banana Pro"
  },
  "permissions": {
    "allow": [
      "Skill",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(git:*)",
      "Read(**)",
      "Edit(**)",
      "Write(**)"
    ],
    "deny": [
      "Read(**/.env)",
      "Edit(**/.env)",
      "Bash(sudo:*)",
      "Bash(curl:*)"
    ]
  }
}
